.container .menus .menu_item {
  display: flex;
  margin: 28rpx 20rpx;
}
.container .menus .menu_item .item_img {
  flex: 3;
  height: 240rpx;
}
.container .menus .menu_item .item_img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.container .menus .menu_item .item_content {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 20rpx;
}
.container .menus .menu_item .item_content .item_name {
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
}
.container .menus .menu_item .item_content .item_time {
  font-size: 26rpx;
  color: #ccc;
}
.container .menus .menu_item .item_content .item_tag {
  font-size: 26rpx;
  color: #ccc;
}
